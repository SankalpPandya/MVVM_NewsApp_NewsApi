<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_news_radius"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="@dimen/card_news_image_height"
                android:layout_height="@dimen/card_news_image_width"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_news_text_margin_left"
                android:layout_toRightOf="@id/coverImage"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingTop="@dimen/card_news_text_padding_top"
                android:shadowColor="@color/colorTextviewShadow"
                android:shadowRadius="1"
                android:text="" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>