<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="?attr/actionBarSize"
    >

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="@dimen/card_trending_corner_radius"
        android:padding="@dimen/tv_title_trending_top_padding"
        android:layout_marginTop="@dimen/card_news_text_padding_top"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/news_desc_image_height"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_news_text_margin_left"
                android:layout_below="@id/coverImage"
                android:ellipsize="end"
                android:paddingTop="@dimen/news_desc_text_padding_top"
                android:textSize="@dimen/news_desc_text_size"
                android:shadowColor="@color/colorTextviewShadow"
                android:shadowRadius="1"
                android:text="" />

            <Button
                android:id="@+id/btn_read_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#008577"
                android:text="@string/read_more"
                android:textColor="@color/colorWhite"
                android:layout_alignParentBottom="true"
            />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>